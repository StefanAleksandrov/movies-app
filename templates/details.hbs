{{> header}}

<div class="container">
    <div class="bg-light text-dark">
        <h1>Movie title: {{title}}</h1>

        <div class="row">
            <div class="col-md-8">
                <img class="img-thumbnail" src="{{imageUrl}}" alt="{{title}}"">
            </div>
            <div class=" col-md-4 text-center">
                <h3 class="my-3 ">Movie Description</h3>
                <p>{{description}}</p>
                {{#if isCreator}}
                <a class="btn btn-danger" href="/delete/{{id}}">Delete</a>
                <a class="btn btn-warning" href="/edit/{{id}}">Edit</a>
                {{/if}}

                {{#if liked}}
                <p><a class="btn btn-secondary" href="/unlike/{{id}}">Unlike</a>{{likesCount}} likes.</p>
                {{else}}
                <p><a class="btn btn-primary" href="/like/{{id}}">Like</a>{{likesCount}} likes.</p>
                {{/if}}
            </div>
        </div>
    </div>
</div>

{{> footer}}