{{> header}}

<form class="text-center border border-light p-5 min-heigth-90" action="/login" method="post">
    <div class="form-group">
        <label for="email">Email</label>
        <input type="email" class="form-control" placeholder="Email" name="email" value="">
    </div>
    <div class="form-group">
        <label for="password">Password</label>
        <input type="password" class="form-control" placeholder="Password" name="password" value="">
    </div>

    <button type="submit" class="btn btn-primary mt-1 w-100">Login</button>
    <p class="mt-5">Don't have an account yet? Please <a href="/register">register</a> and join us!</p>

</form>

{{> footer}}